<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/overlay"
        android:layout_width="640dp"
        android:layout_height="360dp"
        android:background="@drawable/bg_overlay">

        <LinearLayout
            android:id="@+id/button_back_sharing"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_menu"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20.5dp"
                android:layout_height="20.5dp"
                android:src="@drawable/icon_back_sharing" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="73.3dp"
            android:layout_marginTop="45dp">

            <ImageView
                android:id="@+id/image_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_start_sharing" />

            <TextView
                android:id="@+id/quantity_guest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="430dp"
                android:fontFamily="@font/roboto_medium"
                android:text="00"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="@string/invitation"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="21sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ic_paired"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="65dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="60dp"
            android:padding="10dp"
            android:src="@drawable/icon_paired"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/spinner_waiting"
            android:layout_width="42.2dp"
            android:layout_height="43.4dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="215dp"
            android:src="@drawable/loading"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="277dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_waiting_button"
                style="@style/Button"
                android:text="@string/common_text_cancel"
                android:visibility="visible" />

            <Button
                android:id="@+id/continue_button"
                style="@style/Button"
                android:layout_marginStart="17dp"
                android:text="@string/common_text_continue"
                android:visibility="visible" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>